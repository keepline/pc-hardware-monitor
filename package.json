{
  "name": "pc-hardware-monitor",
  "version": "1.0.0",
  "description": "PC硬件信息监控工具 - 黑色科技风格",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "build:all": "electron-builder --win --x64 --ia32"
  },
  "keywords": [
    "hardware",
    "monitor",
    "system-info",
    "electron"
  ],
  "author": "keepline",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keepline/pc-hardware-monitor.git"
  },
  "build": {
    "appId": "com.keepline.pc-hardware-monitor",
    "productName": "PC硬件监控工具",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PC硬件监控工具"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git",
      "!dist",
      "!build",
      "!*.ps1",
      "!*.bat"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "systeminformation": "^5.21.20"
  }
}
