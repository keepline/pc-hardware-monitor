{
  "name": "pc-hardware-monitor",
  "version": "1.0.0",
  "description": "PC硬件信息监控工具 - 黑色科技风格",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable --x64",
    "build:all": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --x64 --ia32"
  },
  "keywords": [
    "hardware",
    "monitor",
    "system-info",
    "electron"
  ],
  "author": "keepline",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keepline/pc-hardware-monitor.git"
  },
  "build": {
    "appId": "com.keepline.pc-hardware-monitor",
    "productName": "PC-Hardware-Monitor",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "signingHashAlgorithms": []
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git",
      "!dist",
      "!build",
      "!*.ps1",
      "!*.bat"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "systeminformation": "^5.21.20"
  }
}
